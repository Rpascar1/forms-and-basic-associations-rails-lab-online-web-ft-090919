<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name, "Artist Name" %>
  <%= f.text_field :artist_name %>

  <%= f.label "Select Genre" %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, "id", "name") %>

  <%= f.fields_for :notes do |n|%>
    <%= n.label :content %>
      <%= n.text_field :content %>
        <% end %>

  <%= f.submit %>
<% end %>
